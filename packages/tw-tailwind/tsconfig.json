{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": ["esnext", "DOM"],
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "alwaysStrict": true,
    "rootDirs": ["./src"],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src"],

  "exclude": ["node_modules", "dist", "test"]
}
