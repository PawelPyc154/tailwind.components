{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "alwaysStrict": true,
    "rootDirs": ["./", "./src"],
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}

